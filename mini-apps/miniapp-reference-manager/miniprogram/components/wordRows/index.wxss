.word-listing-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.word-listing-content {
  width: 96%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 300ms ease;
}

.word-listing-row {
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  height: 132rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.marked-unknown {
  background-color: #FF8C00;
  color: white;
  font-weight: bold;
}

