.word-detail-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.word-detail-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  /* align-items: left; */
  justify-content: flex-start;
}

.word-title-group {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.word-title {
  margin-top: 30rpx;
  font-weight: bold;
  font-size: 1.5rem;
}

.word-pron {
  display: flex;
  flex-direction: row;
  /* align-items: left; */
  justify-content: flex-start;
}

image {
  height: 1rem;
  width: 1rem;
  padding-left: 20rpx;
}

.word-info-item {
  line-height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.info-item-group {
  margin-top: 30rpx;
}

.info-item-title {
  font-weight: bold;
  font-size: 0.8rem;
}

.info-item-content {
  margin-top: 10rpx;
}
