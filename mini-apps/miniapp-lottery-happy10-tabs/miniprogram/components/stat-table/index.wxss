.stat-table {
  width: 100%;
  font-size: 10px;
  border-bottom: 1rpx solid silver;
  display: flex;
}

.tr {
  display: flex;
  justify-content: center;
  width: 100%;
  height: auto;
  border: 1rpx solid silver;
  box-sizing: border-box;
}

.tdColumn {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
}

.row {
  justify-content: center;
  text-align: center;
  display: flex;
  width: 100%;
}

.head-last {
  border-bottom: 1rpx solid silver;
}

/* 隔行换色 */
.row.body:nth-child(2n) {
  background-color: #f5f5f5;
}
.row.body:nth-child(2n-1) {
  background-color: #ededed;
}

/* column width */
